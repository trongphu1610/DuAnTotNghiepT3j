<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimention_16dp"
        android:background="@drawable/border_title"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_avt_album"
            android:layout_width="@dimen/dimention_50dp"
            android:layout_height="@dimen/dimention_50dp"
            android:layout_margin="@dimen/dimention_16dp"
            android:padding="@dimen/dimention_10dp"/>

        <TextView
            android:id="@+id/tv_name_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimention_16dp"

            android:fontFamily="@font/lantinwd"
            android:text="@string/title_album"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/dimention_15sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>